{
    "name": "@vessel/core",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm && tsc --emitDeclarationOnly --declaration",
        "dev": "tsup src/index.ts --format esm --watch & tsc --emitDeclarationOnly --declaration --watch",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@vessel/network": "workspace:*",
        "@vessel/storage": "workspace:*",
        "zustand": "^5.0.11"
    },
    "devDependencies": {
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}