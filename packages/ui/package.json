{
    "name": "@vessel/ui",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./styles.css": "./dist/styles.css"
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --external react && tsc --emitDeclarationOnly --declaration",
        "dev": "tsup src/index.ts --format esm --watch --external react & tsc --emitDeclarationOnly --declaration --watch",
        "clean": "rm -rf dist"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "@codemirror/lang-json": "^6.0.2",
        "@codemirror/view": "^6.39.12",
        "@lezer/highlight": "^1.2.3",
        "@tailwindcss/cli": "^4.1.18",
        "@uiw/codemirror-themes": "^4.25.4",
        "@uiw/react-codemirror": "^4.25.4",
        "@vessel/core": "workspace:*",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.563.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}