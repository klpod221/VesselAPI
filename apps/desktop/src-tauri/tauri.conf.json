{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "package": {
        "productName": "vessel-api",
        "version": "0.1.0"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "identifier": "com.vessel.app",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "app": {
        "windows": [
            {
                "title": "Vessel API",
                "width": 1200,
                "height": 800
            }
        ],
        "security": {
            "csp": null
        }
    }
}